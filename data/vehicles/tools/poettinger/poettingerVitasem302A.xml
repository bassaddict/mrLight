<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle>
	<!-- about 90hp for harrow, 60hp for the sower (150hp) -->
    <powerConsumer ptoRpm="540" neededPtoPower="50" forceNode="0>" mrlBaseForce="2" mrlBaseForceFactor="3" />
	
    <speedLimit value="14" />
	
	<groundReferenceNodes>
        <groundReferenceNode mrlOrigNode="1" chargeValue="1" mrlNormalizeChargeValue="false" />
        <groundReferenceNode mrlOrigNode="2" chargeValue="1" mrlNormalizeChargeValue="false" />
        <groundReferenceNode mrlOrigNode="3" chargeValue="1" mrlNormalizeChargeValue="false" />
    </groundReferenceNodes>
	
	<capacity>1000</capacity>

    <inputAttacherJoints>
        <inputAttacherJoint mrlOrigJointIndex="1" lowerDistanceToGround="0.50" upperDistanceToGround="1.5" />
    </inputAttacherJoints>

	<!-- 995kg for sower + 1740kg for harrow (2735kg) -->
    <components>
        <component1 centerOfMass="0 0.55 0.4" mrlMass="2.735" />
    </components>

</vehicle>